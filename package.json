{
  "name": "software-serialport",
  "version": "1.0.0",
  "author": "ArthurZheng",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/openblock-plugin/softwareSerialport.git"
  },
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "dev": "npx openblock-registry-cli dev",
    "build": "npx openblock-registry-cli build",
    "build:obfuscate": "npx openblock-registry-cli build --obfuscate",
    "publish": "npx openblock-registry-cli publish",
    "publish:dry": "npx openblock-registry-cli publish --dry-run",
    "validate": "npx openblock-registry-cli validate",
    "i18n:update": "npx openblock-registry-cli i18n update",
    "lint": "eslint . --ext .js --fix"
  },
  "openblock": {
    "name": {
      "formatMessage": {
        "id": "softwareSerial.name",
        "default": "Software Serial"
      }
    },
    "extensionId": "softwareSerial",
    "supportDevice": [
        "arduinoUno",
        "arduinoNano",
        "arduinoLeonardo",
        "arduinoMega2560"
    ],
    "iconURL": "./assets/softwareSerial.png",
    "description": {
      "formatMessage": {
        "id": "softwareSerial.description",
        "default": "Allow serial communication on other digital pins of the Arduino."
      }
    },
    "msg": "./src/msg.json",
    "blocks": "./src/blocks.js",
    "toolbox": "./src/toolbox.js",
    "generator": "./src/generator.js",
    "translations": "./src/translations.js",
    "tags": ["other"],
    "helpLink": "https://wiki.openblock.cc"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.3.0",
    "eslint-config-scratch": "^5.0.0",
    "husky": "^9.0.0"
  }
}
